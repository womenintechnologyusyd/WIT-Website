{% extends 'top.jinja' %}

{% block content %} 
    <style>

        .page-content {
            margin: 60px;
        }

        .pub {
            display: inline-block;
            text-align: center;
        }

        .pub-thumbnail {
            width: 200px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); /* Add drop shadow */
            margin-bottom: 10px;
        }

        .pub-caption {
            margin-top: 20px;
            color: inherit;
        }

        .prospectus-container {
            display: inline-block;
            text-align: center;
        }

        .feather-external-link {
            width: 12px;
            height: 12px;
            vertical-align: middle;
        }

        /* Style for the top banner */
        .top-banner {
            background-color: #7A1F8D; /* Purple background */
            padding: 50px 40px;
            display: flex;
            justify-content: center;
            align-items: center;
            margin-bottom: 100px;
        }

        /* Content inside the banner */
        .banner-content {
            display: flex;
            justify-content: space-between;
            align-items: center;
            width: 100%;
        }

        /* Title styling */
        .banner-content .title {
            flex: 1;
            font-size: 4rem;
            font-weight: bold;
            color: white;
        }

        /* Caption styling */
        .banner-content .caption {
            flex: 1;
            text-align: right;
            font-size: 1.5em;
            line-height: 1.6;
            color: white;
        }
    </style>

    <div class="top-banner">
        <div class="banner-content">
            <h1 class="title"> Publications</h1>
            <div class="caption">
                Explore our industry insights.
            </div>
        </div>
    </div>

    <div class="page-content">
        <figure class="pub">
        <img src="{{ url_for('static', filename='images/welcome-pub-thumbnail.png') }}" alt="Magazine Front Page" class="pub-thumbnail">
        <figcaption>
            <a href="{{ url_for('static', filename='documents/welcome-pub-2024.pdf') }}" target="_blank" class="pub-caption">
                Welcome to WIT 2024 
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather-external-link">
                    <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
                    <polyline points="15 3 21 3 21 9"></polyline>
                    <line x1="10" y1="14" x2="21" y2="3"></line>
                </svg>
            </a>
        </figcaption>
    </figure>
    </div>

    <footer>  
        {% include "footer.jinja" %}
    </footer>

{% endblock %}
