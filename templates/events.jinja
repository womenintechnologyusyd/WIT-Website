{% extends 'top.jinja' %}

{% block content %} 
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <style>
      #header {
          text-align: center;
      }

      @keyframes gradientSwipe {
          0% { background-position: -100% 0; }
          50% { background-position: 100% 0; }
          100% { background-position: -100% 0; }
      }

      .gradient-text {
          background: linear-gradient(90deg, #7A1F8D, #C991D1, #7A1F8D);
          background-size: 200% 100%;
          -webkit-background-clip: text;
          -webkit-text-fill-color: transparent;
          animation: gradientSwipe 10s infinite linear;
      }

      #title {
          font-size: 5rem;
          font-weight: bold;
          margin-top: 75px;
          margin-bottom: 5px;
      }

      #subtitle {
          font-size: 1.5em;
          font-weight: normal;
      }

      .event-container {
          display: flex;
          align-items: center;
          justify-content: center;
          max-width: 1020px;
          height: 600px;
          margin: 60px auto;
          border-radius: 20px;
          overflow: hidden;
          box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
          background-color: white;
      }

      .event-image {
          width: 480px;
          height: 600px;
      }

      .event-text {
          width: 540px;
          padding: 50px;
          text-align: left;
      }

      .event-text h2 {
          margin-top: 0;
          margin-left: 0;
          margin-bottom: 10px;
          color: black;
          font-size: 30px;
          text-align: left;
      }

      .event-text p {
          color: #555;
          font-size: 1.2em;
      }

      .heading {
          font-size: 2.5rem;
          font-weight: bold;
          text-align: left;
          margin-left: 210px;
          margin-bottom: 20px;
      }

      .year-buttons {
          display: flex;
          justify-content: left;
          gap: 10px;
          margin-bottom: 20px;
          margin-left: 210px;
      }

      .year-button {
          border-radius: 50px;
          padding: 10px 20px;
          font-size: 24px;
          font-weight: bold;
          cursor: pointer;
          border: 2px solid #7A1F8D;
          background-color: white;
          color: #7A1F8D;
      }

      .year-button.active {
          background-color: #7A1F8D;
          color: white;
      }

      .events-grid {
          display: flex;
          justify-content: left;
          gap: 20px;
          margin-top: 25px;
          margin-bottom: 100px;
          margin-left: 210px;
      }

      .event-card {
          width: 240px;
          height: 300px;
          background-color: #f3f3f3;
          border-radius: 15px;
          box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
      }
    </style>

    <div id="header">
        <h1 id="title" class="gradient-text">Events</h1>
        <p id="subtitle" class="gradient-text">Insert caption</p>
    </div>

    {# Event 1 #}
    <div class="event-container">
        <img src="{{ url_for('static', filename='images/blank.jpg') }}" class="event-image">
        <div class="event-text">
            <h2>Event name</h2>
            <p>Description</p>
        </div>
    </div>

    {# Event 2 #}
    <div class="event-container">
        <img src="{{ url_for('static', filename='images/blank.jpg') }}" class="event-image">
        <div class="event-text">
            <h2>Event name</h2>
            <p>Description</p>
        </div>
    </div>

    <h2 class="heading">Previous events</h2>

    <div class="year-buttons">
        <button class="year-button" id="btn-2024" onclick="showEvents(2024)">2024</button>
        <button class="year-button active" id="btn-2025" onclick="showEvents(2025)">2025</button>
    </div>

    <div class="events-grid" id="events-2024" style="display: none;">
        <div class="event-card"></div>
        <div class="event-card"></div>
        <div class="event-card"></div>
        <div class="event-card"></div>
    </div>

    <div class="events-grid" id="events-2025">
        <img src="{{ url_for('static', filename='images/semester-1-picnic-2025.png') }}" class="event-card">
        <img src="{{ url_for('static', filename='images/coffee-break-sem1-2025.png') }}" class="event-card">
    </div>

    <script>
        function showEvents(year) {
            document.getElementById('events-2024').style.display = (year === 2024) ? 'flex' : 'none';
            document.getElementById('events-2025').style.display = (year === 2025) ? 'flex' : 'none';
            
            document.getElementById('btn-2024').classList.toggle('active', year === 2024);
            document.getElementById('btn-2025').classList.toggle('active', year === 2025);
        }
    </script>

    <footer>  
        {% include "footer.jinja" %}
    </footer>

{% endblock %}
