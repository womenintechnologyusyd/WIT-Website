    <script>
        function showEvent(eventId) {
            document.querySelectorAll('.event-container').forEach(container => {
                container.style.display = 'none';
            });
            document.getElementById(eventId).style.display = 'flex';

            // Update arrow states
            const prevArrow = document.getElementById('prev-arrow');
            const nextArrow = document.getElementById('next-arrow');
            if (eventId === 'event-1') {
                prevArrow.classList.add('disabled');
                prevArrow.onclick = null;
                nextArrow.classList.remove('disabled');
                nextArrow.onclick = () => showEvent('event-2');
            } else {
                nextArrow.classList.add('disabled');
                nextArrow.onclick = null;
                prevArrow.classList.remove('disabled');
                prevArrow.onclick = () => showEvent('event-1');
            }
        }

        function showEvents(year) {
            document.getElementById('events-2024').style.display = (year === 2024) ? 'flex' : 'none';
            document.getElementById('events-2025').style.display = (year === 2025) ? 'flex' : 'none';
            
            document.getElementById('btn-2024').classList.toggle('active', year === 2024);
            document.getElementById('btn-2025').classList.toggle('active', year === 2025);
        }
    </script>

    <footer>  
        {% include "footer.jinja" %}
    </footer>
{% endblock %}