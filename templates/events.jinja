{% extends 'top.jinja' %}

{% block content %} 
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <style>
        #header {
            text-align: center;
        }

        @keyframes gradientSwipe {
            0% { background-position: -100% 0; }
            50% { background-position: 100% 0; }
            100% { background-position: -100% 0; }
        }

        .gradient-text {
            background: linear-gradient(90deg, #7A1F8D, #C991D1, #7A1F8D);
            background-size: 200% 100%;
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            animation: gradientSwipe 10s infinite linear;
        }

        #title {
            font-size: 5rem;
            font-weight: bold;
            margin-top: 75px;
            margin-bottom: 5px;
        }

        #subtitle {
            font-size: 1.5em;
            font-weight: normal;
        }

        .events-wrapper {
            position: relative;
            max-width: 1020px;
            margin: 0 auto;
        }

        .event-container {
            display: flex;
            align-items: center;
            justify-content: center;
            max-width: 1020px;
            height: 600px;
            margin: 60px auto;
            border-radius: 20px;
            overflow: hidden;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            background-color: white;
        }

        .event-image {
            width: 480px;
            height: 600px;
            object-fit: cover;
        }

        .event-text {
            width: 540px;
            padding: 50px;
            text-align: left;
        }

        .event-text h2 {
            margin-top: 0;
            margin-left: 0;
            margin-bottom: 10px;
            color: black;
            font-size: 30px;
            text-align: left;
        }

        .event-text p {
            color: black;
            font-size: 1em;
            margin-bottom: 10px;
        }

        .navigation-arrows {
            position: absolute;
            top: 50%;
            width: 100%;
            display: flex;
            justify-content: space-between;
            transform: translateY(-50%);
            padding: 0 10px;
            box-sizing: border-box;
        }

        .arrow {
            cursor: pointer;
            font-size: 2rem;
            color: #7A1F8D;
            background: rgba(255, 255, 255, 0.9);
            border-radius: 50%;
            width: 50px;
            height: 50px;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
            transition: background 0.3s, transform 0.2s;
        }

        .arrow:hover {
            background: #C991D1;
            color: white;
            transform: scale(1.1);
        }

        .arrow.disabled {
            color: #ccc;
            background: rgba(255, 255, 255, 0.5);
            cursor: not-allowed;
        }

        .arrow.disabled:hover {
            background: rgba(255, 255, 255, 0.5);
            transform: none;
        }

        .heading {
            font-size: 2.5rem;
            font-weight: bold;
            text-align: left;
            margin-left: 210px;
            margin-bottom: 20px;
        }

        .year-buttons {
            display: flex;
            justify-content: left;
            gap: 10px;
            margin-bottom: 20px;
            margin-left: 210px;
        }

        .year-button {
            border-radius: 50px;
            padding: 10px 20px;
            font-size: 24px;
            font-weight: bold;
            cursor: pointer;
            border: 2px solid #7A1F8D;
            background-color: white;
            color: #7A1F8D;
        }

        .year-button.active {
            background-color: #7A1F8D;
            color: white;
        }

        .events-grid {
            display: flex;
            flex-wrap: wrap;
            justify-content: flex-start;
            gap: 20px;
            margin-top: 25px;
            margin-bottom: 100px;
            margin-left: 210px;
        }

        .event-card {
            width: 240px;
            height: 300px;
            background-color: #f3f3f3;
            border-radius: 15px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            object-fit: cover;
        }

        /* Smaller Screen Adjustments */
        @media only screen and (max-width: 900px) {
            #title { font-size: 3.5rem; }
            #subtitle { font-size: 1.2em; }

            .events-wrapper { padding: 0 20px; }

            .event-container {
                display: inline-block;
                overflow: visible;
                height: auto;
                margin: 60px 40px;
            }

            .event-image {
                height: auto;
                width: 100%;
            }

            .event-text {
                width: auto;
                padding: 30px;
                text-align: left;
            }

            .navigation-arrows {
                position: static;
                transform: none;
                justify-content: space-between;
                margin: 20px auto;
                width: 200px;
            }

            .arrow {
                font-size: 1.5rem;
                width: 40px;
                height: 40px;
            }

            .heading { margin-left: 40px; }
            .events-grid { margin-left: 40px; justify-content: space-evenly; }
            .year-buttons { margin-left: 40px; }
        }
    </style>

    <div id="header">
