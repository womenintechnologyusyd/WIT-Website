{% extends 'top.jinja' %}

{% block content %} 

    <style>
        #header {
            text-align: center;
        }

        @keyframes gradientSwipe {
            0% { background-position: -100% 0; }
            50% { background-position: 100% 0; }
            100% { background-position: -100% 0; }
        }

        .gradient-text {
            background: linear-gradient(90deg, #7A1F8D, #C991D1, #7A1F8D);
            background-size: 200% 100%;
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            animation: gradientSwipe 10s infinite linear;
        }

        #title {
            font-size: 5rem;
            font-weight: bold;
            margin-top: 75px;
            margin-bottom: 5px;
        }

        #subtitle {
            font-size: 1.5em;
            font-weight: normal;
        }

        .page-content {
            margin: 60px;
            max-width: 1200px;
            margin-left: auto;
            margin-right: auto;
        }

        .sponsor-section {
            display: flex;
            align-items: center;
            gap: 40px;
            margin-bottom: 60px;
            background: linear-gradient(145deg, #ffffff, #f9f9f9);
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .sponsor-section:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
        }

        .sponsor-logo {
            max-width: 300px;
            height: auto;
            transition: transform 0.3s ease, filter 0.3s ease;
            border-radius: 10px;
        }

        .sponsor-logo:hover {
            transform: scale(1.05);
            filter: brightness(1.1);
        }

        .description {
            flex: 1;
            font-size: 1.1rem;
            line-height: 1.6;
            color: #333;
        }

        hr {
            width: 70%;
            background: linear-gradient(to right, transparent, #C991D1, transparent);
            height: 2px;
            border: none;
            margin: 40px auto;
        }

        .intro-text {
            font-size: 1.2rem;
            line-height: 1.8;
            color: black;
            text-align: center;
            margin-bottom: 40px;
        }

        .intro-text b {
            color: #7A1F8D;
            font-weight: bold;
            background: linear-gradient(90deg, #C991D1, #7A1F8D);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            animation: gradientSwipe 5s infinite linear;
        }

         /* Smaller Screen Adjustments */
        @media only screen and (max-width: 900px) {
            .page-content {margin: 40px;}

            #title {font-size: 3.5rem;}
            #subtitle {font-size: 1.2em;}

            .sponsor-section {
                flex-direction: column;
                padding: 20px;
                gap: 20px;
            }

            .sponsor-logo {
                max-width: 200px;
                margin: 0 auto;
            }

            .description {
                text-align: center;
            }
   
        }
    </style>

