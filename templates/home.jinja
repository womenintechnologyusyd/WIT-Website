{% extends 'top.jinja' %}

{% block content %} 

    <style>

        /* Extend gradient background to cover both sections */
        .gradient-background {
            position: relative;
            background: linear-gradient(120deg, #7A1F8D, #C991D1, #7A1F8D);
            background-size: 400% 400%;
            animation: gradient-movement 20s ease infinite;
            overflow: hidden;
            padding: 100px 0; /* Increased padding to wrap both sections */
            color: white;
            border-radius: 0;
            display: flex;
            flex-direction: column;
            align-items: center;
            margin-bottom: -10px; /* Fixes white gap before the footer */
        }

        @keyframes gradient-movement {
            0% { background-position: 0% 50%; }
            25% { background-position: 50% 100%; }
            50% { background-position: 100% 50%; }
            75% { background-position: 50% 0%; }
            100% { background-position: 0% 50%; }
        }

        /* Ensure homepage banner remains centered */
        #homepage-banner {
            text-align: center;
            max-width: 750px;
            width: 100%;
            z-index: 1;
            margin-bottom: 50px; /* Adds spacing between title and socials */
        }

        .title {
            font-size: 8rem;
            font-weight: bold;
            letter-spacing: -1px;
            margin: 0;
            text-align: center;
            color: white;
        }

        .subtitle-big {
            font-size: 2.25rem;
            font-weight: 600;
            line-height: 1.25;
            letter-spacing: 0.5px;
            margin-top: 3rem;
            text-align: center;
            color: white;
        }

        .subtitle-big b {
            font-family: 'OpenSauceOne', sans-serif;
            font-weight: bold;
        }

        .subtitle-small {
            font-size: 1.25rem;
            font-weight: normal;
            line-height: 1.5;
            letter-spacing: 0.5px;
            margin-top: 3rem;
            text-align: center;
            color: white;
        }

        /* Style for the Follow Our Socials Box */
        .socials-container {
            background-color: white;
            border-radius: 15px;
            padding: 40px;
            width: 600px;
            text-align: center;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            color: black; /* Fix for missing text */
        }

        .social-icons {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin-top: 20px;
        }

        .social-icon {
            width: 60px;
            height: 60px;
            transition: transform 0.3s ease;
        }

        .social-icon:hover {
            transform: scale(1.1);
        }

        /* The alert message box */
        .alert {
            padding: 20px;
            background-color: #f44336; /* Red */
            color: white;
            text-align: center;
        }

        /* The close button */
        .closebtn {
            margin-left: 15px;
            color: white;
            font-weight: bold;
            float: right;
            font-size: 22px;
            line-height: 20px;
            cursor: pointer;
            transition: 0.3s;
        }

        /* When moving the mouse over the close button */
        .closebtn:hover {
            color: black;
        }

    </style>

    <!-- Alert Box -->
    <div class="alert">
        <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
        <b>NOTICE:</b> The website is still in the development stage. Features may be changed in the final release.<br>
        There may currently be bugs and broken features, these will be fixed before final deployment. <br><br>

        For the best user experience at this stage, please view on desktop (fullscreen).
    </div>

    <!-- Gradient Background Wrapping Two Sections -->
    <div class="gradient-background">

        <!-- Hello World Section -->
        <div id="homepage-banner">
            <h1 class="title">Hello World</h1>
            <p class="subtitle-big">We are Women in Technology <br> at The University of Sydney </p>
            <p class="subtitle-small">Join us to empower female students entering the tech industry. Our members 
            get ahead by building their professional networks, sharpening their technical 
            skills, and connecting with like-minded peers.</p>
        </div>

        <!-- Follow Our Socials Box (Now Inside Gradient Background) -->
        <div class="socials-container">
            <h2 class="large">Follow our socials</h2>
            <p>Stay connected with us on social media.</p>
            <div class="social-icons">
                <a href="https://www.instagram.com/witusyd/" target="_blank">
                    <img src="static/images/instagram-colour.png" alt="Instagram" class="social-icon">
                </a>
                <a href="https://www.facebook.com/witusyd" target="_blank">
                    <img src="static/images/facebook-colour.png" alt="Facebook" class="social-icon">
                </a>
                <a href="https://www.linkedin.com/company/witusyd/" target="_blank">
                    <img src="static/images/linkedin-colour.png" alt="LinkedIn" class="social-icon">
                </a>
            </div>
        </div>

    </div>

    <footer>  
        {% include "footer.jinja" %}
    </footer>

    <script src="/static/js/libs/main.js"></script>

{% endblock %}
