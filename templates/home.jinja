{% extends 'top.jinja' %}

{% block content %} 

    <style>
        
        #gradient-background {
            position: relative;
            overflow: hidden;
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 100px 0;
            margin-bottom: -10px;
            border-radius: 0;
            background: linear-gradient(120deg, #7A1F8D, #C991D1, #7A1F8D);
            background-size: 400% 400%;
            animation: gradient-movement 20s ease infinite;
            color: white;
        }

        /* Defines the animation for the background gradient movement. */
        @keyframes gradient-movement {
            0% { background-position: 0% 50%; }
            25% { background-position: 50% 100%; }
            50% { background-position: 100% 50%; }
            75% { background-position: 50% 0%; }
            100% { background-position: 0% 50%; }
        }

        /* Hello World and WIT introduction */
        #welcome-msg {
            text-align: center;
            max-width: 750px;
            width: 100%;
            z-index: 1;
            margin-bottom: 50px;
        }

        /* Hello World */
        .title {
            font-size: 8rem;
            font-weight: bold;
            letter-spacing: -1px;
            margin: 0;
            text-align: center;
            color: white;
        }

        /* We are Women in Technology... */
        .subtitle-big {
            font-size: 2.25rem;
            font-weight: 600;
            line-height: 1.25;
            letter-spacing: 0.5px;
            margin-top: 3rem;
            text-align: center;
            color: white;
        }

        /* Join us to... */
        .subtitle-small {
            font-size: 1.25rem;
            font-weight: normal;
            line-height: 1.5;
            letter-spacing: 0.5px;
            margin-top: 3rem;
            text-align: center;
            color: white;
        }

        .socials-container {
            background-color: white;
            border-radius: 15px;
            padding: 40px;
            width: 750px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
            color: black;
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 50px;
        }

        .social-text {
            flex: 1;
            text-align: left;
            padding-right: 30px; /* Adds space between text and icons */
        }

        .social-title {
            font-size: 2.5rem;
            font-weight: bold;
            margin-bottom: 10px;
            margin-left: 0;
            text-align: left;
        }

        .social-subtitle {
            font-size: 1.2rem;
            text-align: left;
            line-height: 1.5;
        }

        .social-icons {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 20px;
        }

        .social-icon {
            width: 90px;
            height: 90px;
            transition: transform 0.3s ease;
        }

        .slideshow-container {
            background-color: white;
            border-radius: 15px;
            padding: 40px;
            width: 750px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
            color: black;
            display: flex;
            flex-direction: column; /* Ensures items are stacked vertically */
            justify-content: center; /* Centers items vertically within the container */
            margin-bottom: 50px;
        }


        .slideshow-text {
            flex: 1;
            text-align: left;
            padding-right: 30px; /* Adds space between text and icons */
        }

        .slideshow-title {
            font-size: 2.5rem;
            font-weight: bold;
            margin-bottom: 10px;
            margin-left: 0;
            text-align: left;
        }

        .slideshow-subtitle {
            font-size: 1.2rem;
            text-align: left;
            line-height: 1.5;
        }

        .slideshow-box {
            background-color: black;
            border-radius: 15px;
            width: 100%;
            display: flex;
            height: 300px;
            margin-top: 20px;
            overflow: hidden; /* Prevents images from overflowing */
            justify-content: center;
            align-items: center;
            position: relative;
        }

        .slideshow-box img {
            width: 100%;
            height: 100%;
            object-fit: cover; /* Ensures the image fills the box without stretching */
            position: absolute;
            transition: transform 0.5s ease-in-out;
        }


        /* New styles for the slideshow buttons */
        .slideshow-controls {
            display: flex;
            justify-content: center;
            gap: 10px;
            margin-top: 20px;
        }

        .slideshow-button {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background-color: #7A1F8D;
            display: flex;
            align-items: center;
            justify-content: center;
            border: none;
            cursor: pointer;
            transition: background 0.3s ease;
        }

        .slideshow-button:hover {
            background-color: #C991D1;
        }

        /* Ensures the triangle arrows are identical in shape and fully filled */
        .slideshow-button svg {
            width: 20px;
            height: 20px;
            fill: white; /* Makes the arrows fully filled white */
        }

        .sponsors-title {
            font-size: 2.5rem;
            font-weight: bold;
        }

        .sponsors-subtitle {
            font-size: 1.2rem;
            line-height: 1.5;
        }

        .sponsors-container {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            grid-gap: 20px;
            justify-content: center;
            align-items: center;
            max-width: 800px;
            margin: 20px auto 0 auto;
        }

        .sponsor-logo {
            background-color: white;
            border-radius: 15px;
            display: flex;
            justify-content: center;
            align-items: center;
            width: 200px;
            height: 100px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
            padding: 15px;
        }

        .sponsor-logo img {
            max-width: 100%;
            max-height: 100%;
            object-fit: contain;
        }

        .sponsors-container:nth-child(4),
        .sponsors-container:nth-child(5) {
            grid-column: span 3;
            justify-self: center;
        }


        /* The alert message box */
        .alert {
            padding: 20px;
            background-color: #f44336; /* Red */
            color: white;
            text-align: center;
        }

        /* The close button */
        .closebtn {
            margin-left: 15px;
            color: white;
            font-weight: bold;
            float: right;
            font-size: 22px;
            line-height: 20px;
            cursor: pointer;
            transition: 0.3s;
        }

        /* When moving the mouse over the close button */
        .closebtn:hover {
            color: black;
        }


    </style>

    <div class="alert">
