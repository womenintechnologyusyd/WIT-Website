{% extends 'top.jinja' %}

{% block content %} 

    <style>
        /* Extend gradient background to cover both sections */
        .gradient-background {
            position: relative;
            background: linear-gradient(120deg, #7A1F8D, #C991D1, #7A1F8D);
            background-size: 400% 400%;
            animation: gradient-movement 20s ease infinite;
            overflow: hidden;
            padding: 100px 0;
            color: white;
            border-radius: 0;
            display: flex;
            flex-direction: column;
            align-items: center;
            margin-bottom: -10px;
        }

        @keyframes gradient-movement {
            0% { background-position: 0% 50%; }
            25% { background-position: 50% 100%; }
            50% { background-position: 100% 50%; }
            75% { background-position: 50% 0%; }
            100% { background-position: 0% 50%; }
        }

        /* Ensure homepage banner remains centered */
        #homepage-banner {
            text-align: center;
            max-width: 750px;
            width: 100%;
            z-index: 1;
            margin-bottom: 50px;
        }

        .title {
            font-size: 8rem;
            font-weight: bold;
            letter-spacing: -1px;
            margin: 0;
            text-align: center;
            color: white;
        }

        .subtitle-big {
            font-size: 2.25rem;
            font-weight: 600;
            line-height: 1.25;
            letter-spacing: 0.5px;
            margin-top: 3rem;
            text-align: center;
            color: white;
        }

        .subtitle-small {
            font-size: 1.25rem;
            font-weight: normal;
            line-height: 1.5;
            letter-spacing: 0.5px;
            margin-top: 3rem;
            text-align: center;
            color: white;
        }

        /* Style for the Follow Our Socials Box */
        .socials-container {
            background-color: white;
            border-radius: 15px;
            padding: 40px;
            width: 750px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            color: black;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .social-text {
            flex: 1;
            text-align: left;
            padding-right: 30px; /* Adds space between text and icons */
        }

        .social-title {
            font-size: 2.5rem;
            font-weight: bold;
            margin-bottom: 10px;
            margin-left: 0;
            text-align: left;
        }

        .social-subtitle {
            font-size: 1.2rem;
            text-align: left;
            line-height: 1.5;
        }

        .social-icons {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 20px;
        }

        .social-icon {
            width: 90px;
            height: 90px;
            transition: transform 0.3s ease;
        }
    </style>

    <div class="gradient-background">
        <div id="homepage-banner">
            <h1 class="title">Hello World</h1>
            <p class="subtitle-big">We are Women in Technology <br> at The University of Sydney </p>
            <p class="subtitle-small">Join us to empower female students entering the tech industry. Our members 
            get ahead by building their professional networks, sharpening their technical 
            skills, and connecting with like-minded women in tech.</p>
        </div>

        <div class="socials-container">
            <div class="social-text">
                <h2 class="social-title">Follow our socials</h2>
                <p class="social-subtitle">Get the latest on 
                upcoming events, exclusive opportunities from our sponsors, tech skill insights, and 
                openings to join our team.</p>
            </div>
            <div class="social-icons">
                <a href="https://www.instagram.com/witusyd/" target="_blank">
                    <img src="static/images/instagram-colour.png" alt="Instagram" class="social-icon">
                </a>
                <a href="https://www.facebook.com/witusyd" target="_blank">
                    <img src="static/images/facebook-colour.png" alt="Facebook" class="social-icon">
                </a>
                <a href="https://www.linkedin.com/company/witusyd/" target="_blank">
                    <img src="static/images/linkedin-colour.png" alt="LinkedIn" class="social-icon">
                </a>
                <a href="https://www.tiktok.com/@witusyd" target="_blank">
                    <img src="static/images/tiktok-colour.png" alt="TikTok" class="social-icon">
                </a>
            </div>
        </div>
    </div>

    <footer>  
        {% include "footer.jinja" %}
    </footer>

{% endblock %}
