        </div>

        <div>
            <h2 class="sponsors-title">Thank you to our sponsors</h2>
            <div class="sponsors-container">
                <div class="sponsor-logo"><img src="static/images/Atlassian_logo.png" alt="Sponsor 1"></div>
                <div class="sponsor-logo"><img src="static/images/tiktok-now-logo.jpg" alt="Sponsor 2"></div>
                <div class="sponsor-logo"><img src="static/images/rabobank_landscape.webp" alt="Sponsor 3"></div>
                <div class="sponsor-logo"><img src="static/images/JaneStreet_logo.png" alt="Sponsor 4"></div>
                <div class="sponsor-logo"><img src="static/images/Elead_logo.png" alt="Sponsor 5"></div>
            </div>
        </div>

    </div>

    <footer>  
        {% include "footer.jinja" %}
    </footer>

    <script>
        document.addEventListener("DOMContentLoaded", function() {
            const images = [
                "static/images/temp1.png",
                "static/images/temp2.png",
                "static/images/temp3.png"
            ];

            let currentIndex = 0;
            const imageElement = document.getElementById("slideshow-image");
            const prevButton = document.querySelector(".slideshow-controls button:first-child");
            const nextButton = document.querySelector(".slideshow-controls button:last-child");
            let autoSlideInterval;

            function updateImage() {
                imageElement.src = images[currentIndex];
            }

            function resetAutoSlide() {
                clearInterval(autoSlideInterval); // Stop the existing auto-scroll
                autoSlideInterval = setInterval(nextImage, 5000); // Restart with a fresh 5s timer
            }

            function nextImage() {
                currentIndex = (currentIndex === images.length - 1) ? 0 : currentIndex + 1;
                updateImage();
            }

            function prevImage() {
                currentIndex = (currentIndex === 0) ? images.length - 1 : currentIndex - 1;
                updateImage();
            }

            prevButton.addEventListener("click", function() {
                prevImage();
                resetAutoSlide(); // Restart auto-scroll when button is clicked
            });

            nextButton.addEventListener("click", function() {
                nextImage();
                resetAutoSlide(); // Restart auto-scroll when button is clicked
            });

            // Start auto-slide every 5 seconds
            autoSlideInterval = setInterval(nextImage, 5000);
        });
    </script>



{% endblock %}