{% block content %} 

    <style>

        .gradient-background {
            position: relative;
            background: linear-gradient(120deg, #7A1F8D, #C991D1, #7A1F8D);
            background-size: 400% 400%;
            animation: gradient-movement 20s ease infinite;
            overflow: hidden; /* Ensures animated elements don't overflow */
            padding: 60px; /* Adjust padding as needed */
            color: white;
            border-radius: 0;
        }

        @keyframes gradient-movement {
            0% {
                background-position: 0% 50%;
            }
            25% {
                background-position: 50% 100%;
            }
            50% {
                background-position: 100% 50%;
            }
            75% {
                background-position: 50% 0%;
            }
            100% {
                background-position: 0% 50%;
            }
        }

        .gradient-background::before, .gradient-background::after {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: radial-gradient(circle, rgba(255, 255, 255, 0.1), transparent 70%);
            animation: swirl 10s ease-in-out infinite alternate both, scale 15s ease-in-out infinite;
            pointer-events: none;
            mix-blend-mode: overlay;
        }

        .gradient-background::after {
            background: radial-gradient(circle at 30% 30%, rgba(255, 255, 255, 0.3), transparent 50%);
            animation: swirl 8s linear infinite alternate both, scale 20s ease-in-out infinite reverse;
        }

        @keyframes swirl {
            0% {
                transform: rotate(0deg);
            }
            100% {
                transform: rotate(360deg);
            }
        }

        @keyframes scale {
            0% {
                transform: scale(1);
            }
            100% {
                transform: scale(1.5);
            }
        }

        #homepage-banner {
            width: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 0; /* Remove padding to avoid gaps */
            margin: 0; /* Remove margin to avoid gaps */
            min-height: 500px; /* Ensure there's enough height for the effect */
        }

        #homepage-banner-wrapper {
            text-align: center;
            max-width: 750px;
            width: 100%;
            z-index: 1; /* Ensure content is above the background */
        }

        .title {
            font-size: 7rem; /* Large font size for the title */
            font-weight: 1000; /* Bold font weight for emphasis */
            letter-spacing: -1px; /* Slightly condense the letter spacing */
            margin: 0;
            text-align: center;
            color: white;
        }

        .subtitle {
            font-size: 1.25rem; /* Smaller font size for the subtitle */
            font-weight: 400; /* Regular font weight */
            line-height: 1.5; /* Comfortable line height */
            letter-spacing: 0.5px; /* Slightly increase letter spacing */
            margin-top: 1rem;
            text-align: center;
            color: white;
        }

        /* New Section Styles */
        .content-section {
            background-color: #f5f5f5; /* Light grey background */
            padding: 60px 0; /* Padding for the section */
        }

        .content-container {
            max-width: 1300px;
            margin: 0 auto; /* Center the content */
            padding: 0 20px; /* Padding for mobile responsiveness */
        }

        .content-box {
            background-color: white;
            border-radius: 15px; /* Rounded corners */
            padding: 60px;
            margin-bottom: 40px; /* Spacing between boxes */
            text-align: center;
        }

        .large {
            font-size: 3rem;
            margin-bottom: 5px;
        }

        /* 
        Banner Slideshow 
        */

        .slider {
            width: 100%;
            height: 510px;
            height: 425px;
            position: relative;
        }

        .slider img { 
            width: 100%; 
            height: 500px; /* Set the Height to auto but after X width, keep the image set. */
            height: auto;
            position: absolute;
            top: 0;
            left: 0;
        } 
        
        @media only screen and (max-width: 1200px) {
            .slider img {
                width: 1200px;
            }
            .slider {
                height: 400px;
            }
        }

        .slider img:first-child {
            z-index: 1;
        }

        .social-icons {
            display: flex;
            justify-content: center;
            gap: 20px; /* Space between the icons */
            margin-top: 20px;
        }

        .social-icon {
            width: 60px; /* Adjusted size of the icons */
            height: 60px;
            transition: transform 0.3s ease;
        }

        .social-icon:hover {
            transform: scale(1.1); /* Slightly enlarge the icon on hover */
        }

        .sponsors-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr); /* Three columns */
            gap: 40px; /* Increased space between logos */
            justify-items: center; /* Center the logos in each cell */
            justify-content: center; /* Center the grid horizontally */
            align-items: center; /* Center logos vertically */
            margin-top: 20px;
        }

        .sponsor-logo img {
            max-width: 200px; /* Increased size of the logos */
            max-height: 200px;
            transition: transform 0.3s ease;
        }

        .sponsor-logo img:hover {
            transform: scale(1.1); /* Slightly enlarge the logo on hover */
        }

        /* Center the rows */
        .sponsors-grid {
            grid-column: span 3;
            justify-content: center;
        }

        @media (max-width: 768px) {
            .sponsors-grid {
                grid-template-columns: repeat(2, 1fr); /* Two columns on smaller screens */
            }

            .sponsor-logo img {
                max-width: 150px; /* Adjusted for smaller screens */
                max-height: 150px;
            }
        }

        /* The alert message box */
        .alert {
            padding: 20px;
            background-color: #f44336; /* Red */
            color: white;
            text-align: center;
        }

        /* The close button */
        .closebtn {
            margin-left: 15px;
            color: white;
            font-weight: bold;
            float: right;
            font-size: 22px;
            line-height: 20px;
            cursor: pointer;
            transition: 0.3s;
        }

        /* When moving the mouse over the close button */
        .closebtn:hover {
            color: black;
        }

    </style>

