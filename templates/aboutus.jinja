<style>

    /* Style for the top banner */
    .top-banner {
        background-color: #7A1F8D; /* Purple background */
        padding: 50px 40px;
        display: flex;
        justify-content: center;
        align-items: center;
        margin-bottom: 100px;
    }

    /* Content inside the banner */
    .banner-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
        width: 100%;
    }

    /* Title styling */
    .banner-content .title {
        flex: 1;
        font-size: 4rem;
        font-weight: bold;
        color: white;
    }

    /* Caption styling */
    .banner-content .caption {
        flex: 1;
        text-align: right;
        font-size: 1.5em;
        line-height: 1.6;
        color: white;
        margin-right: 20px;
    }

    /* Mobile Banner Content */
    @media only screen and (max-width: 600px) {
        .banner-content {
            display: block;
            font-size: 3rem;
        }

        .banner-content .caption {
            text-align: left;
            margin-left: 20px;
            font-size: 1rem;
        }
    }

    /* Grey margin container */
    .grey-margin-container {
        background-color: #f2f2f2; /* Light grey background for the margin */
        padding-left: 20px;
        padding-right: 20px;
    }

    /* Full white content wrapper */
    .full-white-container {
        margin: 60px;
    }

    /* General styling for the content section */
    .content-section {
        line-height: 1.6;
        font-size: 1.1em;
        color: #444;
    }

    .row {
        display: flex;
        justify-content: space-around;
        flex-wrap: wrap;
        margin: 20px auto;
        max-width: 1200px;
    }

    .profile {
        flex: 33.33%;
        padding: 5px;
        text-align: center;
    }

    .name {
        font-size: 15px;
    }

    .title {
        font-size: 13px;
        color: #7A1F8D;
    }
    /* Remove margin or padding from the last element */
    .full-white-container, .grey-margin-container {
        padding-bottom: 0;
        margin-bottom: 0;
    }

    /* Ensure no margin at the top of the footer */
    footer {
        margin-top: 0;
        padding-top: 0;
    }

