{% extends 'top.jinja' %}

{% block content %}

<style>
    #header {
        text-align: center;
        padding: 40px 0;
    }

    @keyframes gradientSwipe {
        0% { background-position: -100% 0; }
        50% { background-position: 100% 0; }
        100% { background-position: -100% 0; }
    }

    .gradient-text {
        background: linear-gradient(90deg, #7A1F8D, #C991D1, #7A1F8D);
        background-size: 200% 100%;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        animation: gradientSwipe 10s infinite linear;
    }

    #title {
        font-size: 5rem;
        font-weight: bold;
        margin: 0;
        margin-top: 2%; 
    }

    #subtitle {
        font-size: 1.5em;
        font-weight: normal;
        margin: 10px 0 0;
    }

    .grey-margin-container {
        background-color: #f3f3f3;
        padding: 40px 20px;
    }

    .full-white-container {
        margin: 0 auto;
        max-width: 1400px;
        padding: 0 20px;
    }

    .wit-container {
        background-color: white;
        padding: 20px 40px 40px 40px; 
        border-radius: 20px;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
        margin: 40px auto;
        width: 100%;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .wit-container:hover {
        transform: translateY(-5px);
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
    }

    .exec-container {
        background-color: white;
        padding: 60px;
        border-radius: 20px;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
        margin: 40px auto;
        width: 100%;
    }

    .content-section {
        line-height: 1.8;
        font-size: 1.2em;
        color: #333;
        max-width: 800px;
        margin: 0 auto;
        text-align: center;
    }

    .content-section h1 {
        font-size: 2.5rem;
        color: #7A1F8D;
        margin-bottom: 30px;
    }

    .content-section p {
        color: black;
        margin-bottom: 20px;
    }

    .highlight {
        color: #7A1F8D;
        font-weight: bold;
        background: linear-gradient(90deg, #C991D1, #7A1F8D);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .row {
        display: flex;
        justify-content: center;
        flex-wrap: wrap;
        gap: 40px;
        margin: 40px auto;
        max-width: 1200px;
    }

    .profile {
        flex: 0 0 28%;
        padding: 20px;
        text-align: center;
        background: white;
        border-radius: 15px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
        transition: transform 0.3s ease;
    }

    .profile:hover {
        transform: translateY(-5px);
    }

    .name {
        font-size: 1.2rem;
        font-weight: bold;
        color: #7A1F8D;
        margin-top: 15px;
    }

    .title {
        font-size: 1rem;
        color: black;
        font-style: italic;
    }

    .degree {
        font-size: 0.9rem;
        color: #C991D1;
        margin-top: 5px;
    }

    #profiles {
        border-radius: 50%;
        width: 150px;
        height: 150px;
        object-fit: cover;
        border: 4px solid #7A1F8D;
        transition: border-color 0.3s ease;
    }

    .profile:hover #profiles {
        border-color: #C991D1;
    }

    .mission-section {
        background: linear-gradient(135deg, #7A1F8D, #C991D1);
        padding: 60px 40px;
        display: flex;
        justify-content: center;
        align-items: center;
        margin-top: 40px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
    }

    .mission-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
        max-width: 1200px;
        width: 100%;
    }

    .mission-content .title {
        font-size: 3.5rem;
        font-weight: bold;
        color: white;
        margin: 0;
    }

    .mission-content .caption {
        font-size: 1.3em;
        line-height: 1.6;
        color: white;
        text-align: right;
        max-width: 500px;
    }

    @media only screen and (max-width: 900px) {
        .profile {
            flex: 0 0 45%;
        }
        .mission-content {
            flex-direction: column;
            text-align: center;
        }
        .mission-content .title {
            font-size: 2.5rem;
            margin-bottom: 20px;
        }
        .mission-content .caption {
            text-align: center;
            font-size: 1.1em;
        }
    }

    @media only screen and (max-width: 600px) {
        #title {
            font-size: 3.5rem;
        }
        #subtitle {
            font-size: 1.2em;
        }
        .mission-section {
            padding: 40px 20px;
            margin: 20px 0; /* Reduced margin for mobile */
        }
        .wit-container, .exec-container {
            padding: 40px 20px;
        }
        .profile {
            flex: 0 0 100%;
        }
        .content-section h1 {
            font-size: 2rem;
        }
        .content-section {
            font-size: 1em;
        }
    }
</style>

