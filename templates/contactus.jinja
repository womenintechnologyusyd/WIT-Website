{% extends 'top.jinja' %}

{% block content %} 

    <style>

    .page-content {
        margin: 60px;
    }

    /* Style for the top banner */
        .top-banner {
            background-color: #7A1F8D; /* Purple background */
            padding: 50px 40px;
            display: flex;
            justify-content: center;
            align-items: center;
            margin-bottom: 100px;
        }

        /* Content inside the banner */
        .banner-content {
            display: flex;
            justify-content: space-between;
            align-items: center;
            width: 100%;
        }

        /* Title styling */
        .banner-content .title {
            flex: 1;
            font-size: 4rem;
            font-weight: bold;
            color: white;
        }

        /* Caption styling */
        .banner-content .caption {
            flex: 1;
            text-align: right;
            font-size: 1.5em;
            line-height: 1.6;
            color: white;
            margin-right: 20px;
        }

        <style>

        .page-content {
            margin: 60px;
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            gap: 100px;
        }

        .column {
            flex: 1;
            padding: 0px;
        }

        .heading {
            font-size: 2.5rem;
            font-weight: bold;
            text-align: left;
            margin-left: 0;
            margin-bottom: 40px;
        }

        .email-heading {
            font-weight: bold;
            color: #7A1F8D;
            line-height: 1.5;
        }

        .email-addr {
            margin-bottom: 40px;
        }

        /* FORM STYLING */
        .contact-form {
            display: flex;
            flex-direction: column;
            gap: 15px;
            width: 70%;
        }

        .form-group {
            margin-bottom: 10px;
        }

        .form-input {
            width: 100%;
            padding: 12px;
            border: 2px solid black;
            border-radius: 15px;
            font-size: 1rem;
            font-family: inherit; /* Ensures the font is the same as the page's default */
        }

        .submit-btn {
            background-color: #7A1F8D;
            color: white;
            border: none;
            padding: 12px;
            font-size: 1.2rem;
            border-radius: 15px;
            cursor: pointer;
            width: 100%;
        }

        .submit-btn:hover {
            background-color: #C991D1;
        }

        /* Mobile Page Content */
        @media only screen and (max-width: 600px) {
            .page-content {display: block;}
            .column {padding-bottom: 60px;}
        }


    </style>

    <div class="top-banner">
        <div class="banner-content">
            <h1 class="title">Contact Us</h1>
            <div class="caption">
                Get in touch with us.
            </div>
        </div>
    </div>


    <div class="column">
            <h2 class="heading">Send us a message</h2>
            
            <form class="contact-form" action="test2.php" method="post">
                <div class="form-group">
                    <input type="text" name="first_name" placeholder="First name" required class="form-input">
                </div>
                <div class="form-group">
                    <input type="text" name="last_name" placeholder="Last name" required class="form-input">
                </div>
                <div class="form-group">
                    <input type="email" name="email" placeholder="Email address" required class="form-input">
                </div>
                <div class="form-group">
                    <textarea name="subject" placeholder="Subject" required class="form-input"></textarea>
                </div>
                <div class="form-group">
                    <textarea name="message" placeholder="Message" rows="6" required class="form-input"></textarea>
                </div>
                <button type="submit" class="submit-btn">Send</button>
            </form>
        </div>



    <div class="page-content">
        <p>
            <b>General Enquiries:</b> womenintechnusyd@gmail.com <br><br>
            <b>Sponsors:</b> sponsorship@witusyd.com <br><br>
            <b>Events:</b> events@witusyd.com <br><br>
            <b>President:</b> president@witusyd.com <br><br>
        </p>
    </div>
    


    <footer>  
        {% include "footer.jinja" %}
    </footer>
 



{% endblock %}