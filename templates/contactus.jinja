{% extends 'top.jinja' %}

{% block content %} 

    <style>

        #header {
            text-align: center;
        }

        @keyframes gradientSwipe {
            0% { background-position: -100% 0; }
            50% { background-position: 100% 0; }
            100% { background-position: -100% 0; }
        }

        .gradient-text {
            background: linear-gradient(90deg, #7A1F8D, #C991D1, #7A1F8D);
            background-size: 200% 100%;
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            animation: gradientSwipe 10s infinite linear;
        }

        #title {
            font-size: 5rem;
            font-weight: bold;
            margin-top: 75px;
            margin-bottom: 5px;
            margin-left: 0;
        }

        #subtitle {
            font-size: 1.5em;
            font-weight: normal;
        }

        .page-content {
            margin: 60px;
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            gap: 100px;
        }

        .column {
            flex: 1;
            padding: 0px;
        }

        /* Style for the top banner */
        .top-banner {
            background-color: #7A1F8D; /* Purple background */
            padding: 50px 40px;
            display: flex;
            justify-content: center;
            align-items: center;
            margin-bottom: 100px;
        }

        /* Content inside the banner */
        .banner-content {
            display: flex;
            justify-content: space-between;
            align-items: center;
            width: 100%;
        }

        /* Title styling */
        .banner-content .title {
            flex: 1;
            font-size: 4rem;
            font-weight: bold;
            color: white;
        }

        /* Caption styling */
        .banner-content .caption {
            flex: 1;
            text-align: right;
            font-size: 1.5em;
            line-height: 1.6;
            color: white;
            margin-right: 20px;
        }

        .heading {
            font-size: 2.5rem;
            font-weight: bold;
            text-align: left;
            margin-left: 0;
            margin-bottom: 40px;
        }

        .email-heading {
            font-weight: bold;
            color: #7A1F8D;
            line-height: 1.5;
        }

        .email-addr {
            margin-bottom: 40px;
        }

        /* FORM STYLING */
        .contact-form {
            display: flex;
            flex-direction: column;
            gap: 15px;
        }

        .form-group {
            margin-bottom: 10px;
        }

        .form-input {
            width: 100%;
            padding: 12px;
            border: 2px solid black;
            border-radius: 15px;
            font-size: 1rem;
            font-family: inherit; /* Ensures the font is the same as the page's default */
        }

        .submit-btn {
            background-color: #7A1F8D;
            color: white;
            border: none;
            padding: 12px;
            font-size: 1.2rem;
            border-radius: 15px;
            cursor: pointer;
            width: 100%;
        }

        .submit-btn:hover {
            background-color: #C991D1;
        }

    </style>

    <div id="header">
        <h1 id="title" class="gradient-text">Contact Us</h1>
        <p id="subtitle" class="gradient-text">Get in touch with our team</p>
    </div>

    <div class="page-content">
        <!-- First Column: Send Us a Message + Form -->
        <div class="column">
            <h2 class="heading">Send us a message</h2>
            
            <form action="mailto:womenintechusyd@gmail.com" method="post" enctype="text/plain" class="contact-form">
                <div class="form-group">
                    <input type="text" name="first_name" placeholder="First name" required class="form-input">
                </div>
                <div class="form-group">
                    <input type="text" name="last_name" placeholder="Last name" required class="form-input">
                </div>
                <div class="form-group">
                    <input type="email" name="email" placeholder="Email address" required class="form-input">
                </div>
                <div class="form-group">
                    <textarea name="message" placeholder="Message" rows="6" required class="form-input"></textarea>
                </div>
                <button type="submit" class="submit-btn">Send</button>
            </form>
        </div>

        <!-- Second Column: Contact Details -->
        <div class="column">
            <h2 class="heading">Contact details</h2>
            <p class="email-heading">GENERAL ENQUIRIES</p>
            <p class="email-addr"><a href="mailto:womenintechusyd@gmail.com">womenintechusyd@gmail.com</a></p>
            <p class="email-heading">SPONSORSHIPS</p>
            <p class="email-addr"><a href="mailto:sponsorship@witusyd.com">sponsorship@witusyd.com</a></p>
            <p class="email-heading">EVENTS</p>
            <p class="email-addr"><a href="mailto:events@witusyd.com">events@witusyd.com</a></p>
        </div>
    </div>

    <footer>  
        {% include "footer.jinja" %}
    </footer>

{% endblock %}
