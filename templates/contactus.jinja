{% extends 'top.jinja' %}

{% block content %}

    <style>
        #header {
            text-align: center;
            position: relative;
            padding-top: 20px;
        }

        @keyframes gradientSwipe {
            0% { background-position: -100% 0; }
            50% { background-position: 100% 0; }
            100% { background-position: -100% 0; }
        }

        .gradient-text {
            background: linear-gradient(90deg, #7A1F8D, #C991D1, #7A1F8D);
            background-size: 200% 100%;
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            animation: gradientSwipe 10s infinite linear;
        }

        #title {
            font-size: 5rem;
            font-weight: bold;
            margin-top: 75px;
            margin-bottom: 5px;
        }

        #subtitle {
            font-size: 1.5em;
            font-weight: normal;
        }

        .intro-message {
            text-align: center;
            font-size: 1.2rem;
            line-height: 1.6;
            color: black;
            margin: 30px auto;
            max-width: 1200px;
            padding: 25px 40px;
            position: relative;
        }

        .intro-lead {
            font-size: 1.4rem;
            font-weight: 600;
            color: #7A1F8D;
            margin-bottom: 10px;
            letter-spacing: 0.5px;
            text-shadow: 0 2px 4px rgba(122, 31, 141, 0.1);
        }

        .intro-message p {
            margin: 0;
            padding: 10px 0;
        }

        .intro-message strong {
            color: #7A1F8D;
            font-weight: bold;
            background: linear-gradient(90deg, #C991D1, #7A1F8D);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            animation: gradientSwipe 5s infinite linear;
        }

        .intro-cta {
            display: inline-block;
            margin-top: 15px;
            font-size: 1.1rem;
            color: #C991D1;
            text-transform: uppercase;
            letter-spacing: 1px;
            position: relative;
            cursor: default;
            text-shadow: 0 2px 4px rgba(201, 145, 209, 0.2);
        }

        .intro-cta::after {
            content: 'â†“';
            position: absolute;
            right: -20px;
            font-size: 1.3rem;
            animation: bounce 2s infinite;
        }

        @keyframes bounce {
            0%, 20%, 50%, 80%, 100% { transform: translateY(0); }
            40% { transform: translateY(-10px); }
            60% { transform: translateY(-5px); }
        }

        .page-content {
            margin: 60px;
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            gap: 60px;
            max-width: 100%;
        }

        .contact-container {
            display: flex;
            align-items: center;
            justify-content: center;
            flex: 1;
            height: 600px;
            border-radius: 20px;
            overflow: hidden;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
            background: linear-gradient(135deg, #fff, #f5f5f5);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .contact-container:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 30px rgba(0, 0, 0, 0.2);
        }

        .contact-column {
            flex: 1;
            padding: 30px;
            border: 2px solid #7A1F8D;
            border-radius: 15px;
            background: linear-gradient(145deg, #f5f5f5, #ffffff);
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            width: 100%;
            height: 100%;
        }

        .heading {
            font-size: 2.5rem;
            font-weight: bold;
            text-align: left;
            margin-bottom: 40px;
            color: #7A1F8D;
            position: relative;
        }

        .heading::after {
            content: '';
            position: absolute;
            bottom: -10px;
            left: 0;
            width: 50px;
            height: 4px;
            background: #C991D1;
            border-radius: 2px;
        }

        .email-heading {
            font-weight: bold;
            color: #7A1F8D;
            line-height: 1.5;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .email-addr a {
            color: #7A1F8D;
            text-decoration: none;
            transition: color 0.3s ease;
        }

        .email-addr a:hover {
            color: #C991D1;
        }

        .contact-form {
            display: flex;
            flex-direction: column;
            gap: 20px;
        }

        .form-group {
            margin-bottom: 10px;
            position: relative;
        }

        .form-input {
            width: 100%;
            padding: 12px 16px;
            border: 2px solid #7A1F8D;
            border-radius: 15px;
            font-size: 1rem;
            font-family: inherit;
            transition: border-color 0.3s ease, box-shadow 0.3s ease;
        }

        .form-input:focus {
            outline: none;
            border-color: #C991D1;
            box-shadow: 0 0 8px rgba(201, 145, 209, 0.5);
        }

        .submit-btn {
            background: linear-gradient(90deg, #7A1F8D, #C991D1);
            color: white;
            border: none;
            padding: 14px;
            font-size: 1.2rem;
            border-radius: 15px;
            cursor: pointer;
            width: 100%;
            transition: transform 0.3s ease, background 0.3s ease;
        }

        .submit-btn:hover {
            transform: scale(1.05);
            background: linear-gradient(90deg, #C991D1, #7A1F8D);
        }

        .socials-container {
            background: linear-gradient(135deg, #fff, #f5f5f5);
            border-radius: 15px;
            padding: 40px;
            width: 100%;
            max-width: 850px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
            color: black;
            margin: 60px auto;
            display: flex;
            align-items: center;
            justify-content: space-between;
            transition: transform 0.3s ease;
        }

        .socials-container:hover {
            transform: translateY(-5px);
        }

        .social-text {
            display: flex;
            flex-direction: column;
            align-items: center;
            flex: 1;
        }

        .social-title {
            font-size: 2.5rem;
            font-weight: bold;
            margin-bottom: 30px;
            text-align: center;
            color: #7A1F8D;
            position: relative;
        }

        .social-title::after {
            content: '';
            position: absolute;
            bottom: -10px;
            left: 50%;
            transform: translateX(-50%);
            width: 50px;
            height: 4px;
            background: #C991D1;
            border-radius: 2px;
        }

        .social-icons {
            display: flex;
            justify-content: center;
            gap: 40px;
            width: 100%;
        }

        .social-icon {
            width: 90px;
            height: 90px;
            transition: transform 0.3s ease, filter 0.3s ease;
            border-radius: 50%;
            padding: 10px;
            background: rgba(122, 31, 141, 0.1);
        }

        .social-icon:hover {
            transform: scale(1.15) rotate(5deg);
            filter: brightness(1.2);
        }

        .usu-logo-container {
            margin-left: 40px;
        }

        .usu-logo {
            width: 200px;
            height: auto;
            transition: transform 0.3s ease, filter 0.3s ease;
            border-radius: 10px;
        }

        .usu-logo:hover {
            transform: scale(1.15);
            filter: brightness(1.1);
        }

        @media only screen and (max-width: 600px) {
            .page-content {
                flex-direction: column;
                gap: 40px;
                margin: 20px;
            }
            .contact-container {
                width: 100%;
                height: auto;
                min-height: 400px;
            }
            .socials-container {
                width: 90%;
                margin: 20px auto;
                padding: 20px;
                flex-direction: column;
                gap: 20px;
            }
            .social-icons {
                gap: 20px;
            }
            .social-icon {
                width: 60px;
                height: 60px;
            }
            .usu-logo-container {
                margin-left: 0;
                margin-top: 20px;
            }
            .usu-logo {
                width: 150px;
            }
            #title {
                font-size: 3rem;
            }
            .heading, .social-title {
                font-size: 2rem;
            }
            .intro-message {
                font-size: 1rem;
                padding: 20px;
                margin: 20px;
            }
            .intro-lead {
                font-size: 1.2rem;
            }
            .intro-cta {
                font-size: 1rem;
            }
        }
    </style>

    <div id="header">
        <h1 id="title" class="gradient-text">Contact Us</h1>
        <p id="subtitle" class="gradient-text">Get in touch with our team</p>
    </div>

    <div class="intro-message">
        <p class="intro-lead">Got a question? A fun idea? Or just want to say hi?</p>
        <p>We'd love to hear from you. Here's how you can reach us. Simply <strong>fill out the form below</strong>, and we'll get back to you.</p>
        <span class="intro-cta">Scroll down to get started!</span>
    </div>

    <div class="page-content">
        <div class="contact-container">
            <div class="contact-column">
                <h2 class="heading">Send us a message</h2>
                
                <form action="mailto:womenintechusyd@gmail.com" method="post" enctype="text/plain" class="contact-form">
                    <div class="form-group">
                        <input type="text" name="first_name" placeholder="First name" required class="form-input">
                    </div>
                    <div class="form-group">
                        <input type="text" name="last_name" placeholder="Last name" required class="form-input">
                    </div>
                    <div class="form-group">
                        <input type="email" name="email" placeholder="Email address" required class="form-input">
                    </div>
                    <div class="form-group">
                        <textarea name="message" placeholder="Message" rows="6" required class="form-input"></textarea>
                    </div>
                    <button type="submit" class="submit-btn">Send</button>
                </form>
            </div>
        </div>

        <div class="contact-container">
            <div class="contact-column">
                <h2 class="heading">Contact details</h2>
                <p class="email-heading">General Enquiries</p>
                <p class="email-addr"><a href="mailto:womenintechusyd@gmail.com">womenintechusyd@gmail.com</a></p>
                <p class="email-heading">Sponsorships</p>
                <p class="email-addr"><a href="mailto:sponsorship@witusyd.com">sponsorship@witusyd.com</a></p>
                <p class="email-heading">Events</p>
                <p class="email-addr"><a href="mailto:events@witusyd.com">events@witusyd.com</a></p>
            </div>
        </div>
    </div>

    <div class="socials-container">
        <div class="social-text">
            <h2 class="social-title">Connect with us online</h2>
            <div class="social-icons">
                <a href="https://www.instagram.com/witusyd/" target="_blank">
                    <img src="static/images/instagram-colour.png" alt="Instagram" class="social-icon">
                </a>
                <a href="https://www.facebook.com/witusyd" target="_blank">
                    <img src="static/images/facebook-colour.png" alt="Facebook" class="social-icon">
                </a>
                <a href="https://www.linkedin.com/company/witusyd/" target="_blank">
                    <img src="static/images/linkedin-colour.png" alt="LinkedIn" class="social-icon">
                </a>
                <a href="https://www.tiktok.com/@witusyd" target="_blank">
                    <img src="static/images/tiktok-colour.png" alt="TikTok" class="social-icon">
                </a>
            </div>
        </div>
        <div class="usu-logo-container">
            <a href="https://usu.edu.au/clubs/women-in-technology/" target="_blank">
                <img src="static/images/usulogo.png" alt="USU" class="usu-logo">
            </a>
        </div>
    </div>

    <footer>  
        {% include "footer.jinja" %}
    </footer>

{% endblock %}